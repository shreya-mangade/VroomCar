<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/tutorial"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="1"
       android:orientation="vertical"
        android:layout_centerHorizontal="true"
       >

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.60"
            android:layout_gravity="center"
            android:id="@+id/rdGrpRideOption">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Within City"
                android:id="@+id/rdWithinCity"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                 android:layout_weight="0.25"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:background="@drawable/button_bg_dray"
                android:textColor="@color/white"
                android:buttonTint="@android:color/holo_green_light"
                />
            <TextView
                android:id="@+id/tv_option"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:text="For your all rides within city"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:layout_height="wrap_content" />


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Inter City"
                android:id="@+id/rdInterCity"
                android:layout_weight="0.25"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:background="@drawable/button_bg_dray"
                android:textColor="@color/white"
                android:buttonTint="@android:color/holo_green_light"
                />
            <TextView
                android:id="@+id/tv_option1"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:text="For all your city to city rides"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />


        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
