<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_above="@+id/btn_contact"
            android:layout_width="fill_parent"
            android:layout_below="@+id/rel_top_headrer"
            android:layout_marginTop="-50dp"
            android:layout_height="fill_parent">


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="false"
                android:id="@+id/scroll_view">


                <RelativeLayout
                    android:id="@+id/rel_image"
                    android:layout_width="fill_parent"
                    android:paddingBottom="15dp"
                    android:layout_height="fill_parent">

                    <RelativeLayout
                        android:id="@+id/rel_data_container"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp">


                        <ImageView
                            android:id="@+id/img_header"
                            android:layout_width="fill_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/landing_header_bg"
                            android:layout_height="250dp" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/orange_transperant"
                            android:layout_height="250dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img_profile_user"
                                android:src="@drawable/image"
                                android:layout_centerHorizontal="true"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />

                            <TextView
                                android:id="@+id/tv_rider_name"
                                android:textSize="18sp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/img_profile_user"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                        </RelativeLayout>


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:layout_below="@+id/rel_data_container"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_like"
                            android:src="@drawable/like_xxhdpi"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textSize="22sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_like"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:layout_below="@+id/rel_data_container"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_share"
                            android:src="@drawable/share_xxhdpi"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="052"
                            android:textSize="22sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/img_share"
                            android:textColor="@android:color/darker_gray"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/ll_age"
                        android:orientation="vertical"
                        android:layout_below="@+id/rel_data_container"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Age"
                            android:textColor="@android:color/darker_gray"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="fill_parent"
                            android:text=""
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/textview_bg"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_profession"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ll_age"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="fill_parent"
                            android:text="Profession"
                            android:textColor="@android:color/darker_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_profession"
                            android:layout_width="fill_parent"
                            android:text=""
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:background="@drawable/textview_bg"
                            android:padding="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_contact_number"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ll_profession"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="fill_parent"
                            android:text="Contact Number (Click on the number to dial)"
                            android:textColor="@android:color/darker_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:background="@drawable/textview_bg"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:layout_height="40dp"
                            android:id="@+id/tv_contact_number" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_email"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_below="@id/ll_contact_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="fill_parent"
                            android:text="Email"
                            android:textColor="@android:color/darker_gray"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_email_address"
                            android:layout_width="fill_parent"
                            android:text=""
                            android:layout_marginTop="5dp"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:background="@drawable/textview_bg"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rides_offered"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ll_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="fill_parent"
                                android:text="Vroomer Rides Offered"
                                android:textColor="@android:color/darker_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_info"
                                android:layout_width="fill_parent"
                                android:text=""
                                android:textSize="15sp"
                                android:padding="5dp"
                                android:textColor="@color/orange"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_rides_offered"
                            android:layout_width="fill_parent"
                            android:text=""
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:background="@drawable/textview_bg"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_status"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/ll_rides_offered"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="fill_parent"
                                android:text="Vroomers Status"
                                android:textColor="@android:color/darker_gray"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_vroomer_info"
                                android:layout_width="fill_parent"
                                android:text=""
                                android:textSize="15sp"
                                android:padding="5dp"
                                android:textColor="@color/orange"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_vroomers_status"
                            android:layout_width="fill_parent"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:background="@drawable/textview_bg"
                            android:textColor="@color/white"
                            android:layout_height="40dp" />

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_contact"
            android:text="CONTACT"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/red"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:id="@+id/rel_top_headrer"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent">

               <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/menu" />

            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/imgbtn_edt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/edit_profile" />

        </RelativeLayout>


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_menu"
        android:layout_width="250dp"
        android:background="@color/gray"
        android:layout_gravity="start"
        android:layout_height="fill_parent">


        <ScrollView
            android:layout_width="fill_parent"
            android:scrollbars="none"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel_profile_container"
                    android:layout_width="fill_parent"
                    android:background="@color/orange"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="90dp"
                        android:src="@drawable/image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:text="Brunch Hadyan"
                        android:layout_below="@+id/img_profile"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/img_edit"
                        android:visibility="gone"
                        android:src="@drawable/edit_profile"
                        android:layout_alignParentRight="true"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/rel_profile_container"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:visibility="gone"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACCOUNT"
                            android:layout_centerVertical="true"
                            android:textColor="@color/white"
                            android:layout_marginLeft="20dp"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:src="@drawable/menu_orange"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:visibility="invisible"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>



                    <TextView
                        android:text="Find A Ride"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:id="@+id/tv_find_ride" />

                    <TextView
                        android:id="@+id/tv_offer_ride"
                        android:text="Offer A Ride"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="Search A Ride"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:text="Feed Back"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_contactus"
                        android:text="Contact Us"
                        android:visibility="gone"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_about_us"
                        android:text="About Us"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_careers"
                        android:text="Careers"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_why_vroomcar"
                        android:text="Why VroomCar?"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />


                    <TextView
                        android:id="@+id/tv_terms_and_conditions"
                        android:text="@string/terms"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/share_us"
                        android:text="Share Us On"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/tv_Logout"
                        android:text="Logout"
                        android:textSize="17sp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_height="50dp" />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
